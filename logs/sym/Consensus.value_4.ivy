#lang ivy1.7

type value

relation chosen(V:value)

after init {
	chosen(V) := false;
}

action choose(v:value) = {
	require forall V. ~chosen(V);
	chosen(v) := true;
}

export choose

invariant [safety] (forall V1, V2. (chosen(V1) & chosen(V2)) -> (V1 = V2) )

invariant [invar_0] (forall V0, V1 . (~chosen(V0) | ~chosen(V1) | (V1 = V0))) # qcost: 5
