invariant [invar_1] forall RESOURCE_MANAGER0. msg_prepared(RESOURCE_MANAGER0) | ~prepared(RESOURCE_MANAGER0) # qcost: 3
invariant [invar_4] forall RESOURCE_MANAGER0. tm_prepared(RESOURCE_MANAGER0) | ~msg_commit # qcost: 3
invariant [invar_33] forall RESOURCE_MANAGER0. ~aborted(RESOURCE_MANAGER0) | ~msg_prepared(RESOURCE_MANAGER0) | msg_abort # qcost: 4
