invariant [eq_0] msg_commit = tm_committed # equivalence relation, qcost: 1
invariant [eq_1] msg_abort = tm_aborted # equivalence relation, qcost: 1
invariant [invar_0] forall RESOURCE_MANAGER0. ~committed(RESOURCE_MANAGER0) | ~prepared(RESOURCE_MANAGER0) # qcost: 3
invariant [invar_2] forall RESOURCE_MANAGER0. ~aborted(RESOURCE_MANAGER0) | ~prepared(RESOURCE_MANAGER0) # qcost: 3
invariant [invar_7] ~msg_commit | ~msg_abort # qcost: 2
invariant [invar_8] ~tm_init | ~msg_commit # qcost: 2
invariant [invar_13] forall RESOURCE_MANAGER0. msg_prepared(RESOURCE_MANAGER0) | ~tm_prepared(RESOURCE_MANAGER0) # qcost: 3
invariant [invar_16] ~tm_init | ~msg_abort # qcost: 2
invariant [invar_21] forall RESOURCE_MANAGER0. ~working(RESOURCE_MANAGER0) | ~aborted(RESOURCE_MANAGER0) # qcost: 3
invariant [invar_29] tm_init | msg_commit | msg_abort # qcost: 3
